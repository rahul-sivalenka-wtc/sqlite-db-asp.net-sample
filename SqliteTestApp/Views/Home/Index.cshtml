@model List<SqliteTestApp.Models.Log>

@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript">
    function onRefresh() {
        $.ajax({
            url: '@Url.Action("RefreshLogs", "Home")',
            success: function (res) {
                $('#logs').html(res);
            }
        })
    }
</script>

<div style="margin-top:15px"></div>

@if (Model.Count > 0)
{
    <div class="row" style="margin-bottom:15px">
        <div class="col-xs-12">
            <a class="btn btn-default" href="#" onclick="onRefresh()">Refresh</a>
        </div>
    </div>

    <div class="row">
        <div id="logs" class="col-xs-12">
            @Html.Partial("TableView", Model)
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xs-12">
            No Logs!!
        </div>
    </div>
}